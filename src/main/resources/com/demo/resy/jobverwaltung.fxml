<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="671.0" prefWidth="1234.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.demo.resy.JobController">
   <children>
      <TableView fx:id="jobs_table" layoutX="14.0" layoutY="38.0" prefHeight="620.0" prefWidth="1203.0">
        <columns>
            <TableColumn fx:id="jobid_column" editable="false" prefWidth="38.0" resizable="false" text="id" />
          <TableColumn fx:id="jobtitle" editable="false" prefWidth="278.0" resizable="false" text="job title" />
            <TableColumn fx:id="company" editable="false" prefWidth="265.0" resizable="false" text="company" />
            <TableColumn fx:id="location" editable="false" prefWidth="124.0" resizable="false" text="location" />
            <TableColumn fx:id="experience" editable="false" minWidth="0.0" prefWidth="93.0" resizable="false" text="experience" />
            <TableColumn fx:id="salary" editable="false" prefWidth="102.0" resizable="false" text="salary" />
            <TableColumn fx:id="jobdescription" editable="false" prefWidth="250.0" resizable="false" style="-fx-cell-size: 50px;" text="job description" />
            <TableColumn fx:id="likes" editable="false" prefWidth="52.0" resizable="false" style="-fx-cell-size: 50px;" text="likes" />
        </columns>
      </TableView>
      <TextField fx:id="filter" layoutX="14.0" layoutY="11.0" prefHeight="25.0" prefWidth="249.0" promptText="filter job results" />
      <Button fx:id="editButton" layoutX="1124.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#editJob" text="Edit">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="delButton" layoutX="1164.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#delJob" text="Delete">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="addButton" layoutX="1082.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#addJob" text="Add">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="refresh" defaultButton="true" layoutX="265.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#refresh" prefHeight="25.0" prefWidth="62.0" text="Refresh">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button fx:id="generate" disable="true" layoutX="329.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#genKey" prefHeight="25.0" prefWidth="151.0" text="Generate Keywords" textAlignment="CENTER" textFill="#cd2828" textOverrun="WORD_ELLIPSIS">
         <font>
            <Font name="System Bold" size="11.0" />
         </font>
         <cursor>
            <Cursor fx:constant="WAIT" />
         </cursor>
         <effect>
            <Glow />
         </effect>
      </Button>
      <Button fx:id="likeButton" defaultButton="true" disable="true" layoutX="482.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#likeJob" text="Like!">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="dislikeButton" disable="true" layoutX="527.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#dislikeJob" style="-fx-background-color: #ff9999;" text="Dislike!">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
