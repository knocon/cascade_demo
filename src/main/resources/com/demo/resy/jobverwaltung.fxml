<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="671.0" prefWidth="1234.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.demo.resy.JobController">
   <children>
      <TableView fx:id="jobs_table" layoutX="14.0" layoutY="38.0" prefHeight="620.0" prefWidth="1203.0">
        <columns>
            <TableColumn fx:id="jobid_column" editable="false" prefWidth="38.0" resizable="false" text="JobID" />
          <TableColumn fx:id="jobname_column" editable="false" prefWidth="94.0" resizable="false" text="Jobname" />
            <TableColumn fx:id="description_column" editable="false" prefWidth="114.0" resizable="false" text="Beschreibung" />
            <TableColumn fx:id="skillset_column" editable="false" prefWidth="102.0" resizable="false" text="Skillset" />
            <TableColumn fx:id="category_column" editable="false" minWidth="0.0" prefWidth="105.0" resizable="false" text="Kategorien" />
            <TableColumn fx:id="duration_column" editable="false" prefWidth="95.0" resizable="false" text="Tätigkeitsdauer" />
            <TableColumn fx:id="company_column" editable="false" prefWidth="88.0" resizable="false" text="Firmenname" />
            <TableColumn fx:id="nachname_column" editable="false" prefWidth="41.0" resizable="false" text="Name" />
            <TableColumn fx:id="vorname_column" editable="false" prefWidth="68.0" resizable="false" text="Vorname" />
            <TableColumn fx:id="email_column" editable="false" prefWidth="92.0" resizable="false" text="Email" />
            <TableColumn fx:id="telnr_column" editable="false" prefWidth="101.0" resizable="false" text="TelNr" />
            <TableColumn fx:id="street_column" editable="false" prefWidth="85.0" resizable="false" text="Straße" />
            <TableColumn fx:id="plzort_column" editable="false" prefWidth="179.0" resizable="false" text="PLZ, Ort" />
        </columns>
      </TableView>
      <TextField fx:id="filter" layoutX="14.0" layoutY="11.0" prefHeight="25.0" prefWidth="249.0" promptText="Tabelle filtern nach Jobs" />
      <Button fx:id="editButton" layoutX="1077.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#editJob" style="-fx-background-color: #ffff99;" text="Bearbeiten">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="delButton" layoutX="1155.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#delJob" style="-fx-background-color: ff9999;" text="Löschen">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="addButton" layoutX="995.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#addJob" style="-fx-background-color: #99ff99;" text="Hinzufügen">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
